<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/waring_ic_margin_top"
        android:layout_marginRight="@dimen/waring_ic_margin_right"
        android:contentDescription="@null"
        android:drawableLeft="@drawable/ic_admin"
        android:drawablePadding="2dp"
        android:textColor="@color/window_tv"
        android:textSize="@dimen/tv_admin"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_network_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/waring_ic_net_margin_top"
        android:layout_marginRight="@dimen/waring_ic_margin_right"
        android:contentDescription="@null"
        android:src="@drawable/ic_network_connect"
        android:visibility="gone" />

    <com.tobot.view.BatteryView
        android:id="@+id/view_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/waring_ic_margin_top"
        android:layout_marginRight="@dimen/waring_ic_margin_most_right"
        android:visibility="gone"
        app:battery_height="@dimen/battery_height"
        app:battery_radius="@dimen/battery_radius"
        app:battery_width="@dimen/battery_width"
        app:charge_sign_margin="@dimen/battery_charge_sign_margin"
        app:charge_sign_width="@dimen/battery_charge_sign_width"
        app:head_height="@dimen/battery_head_height"
        app:head_margin_left="@dimen/battery_head_margin_left"
        app:head_width="@dimen/battery_head_width"
        app:inside_margin="@dimen/battery_inside_margin"
        app:solid_charge_color="@color/battery_solid_charge"
        app:solid_low_color="@color/battery_solid_low"
        app:solid_normal_color="@color/battery_solid_normal"
        app:stroke_color="@color/battery_stroke"
        app:stroke_width="@dimen/battery_stroke_width"
        app:text_color="@color/battery_text"
        app:text_margin="@dimen/battery_text_margin"
        app:text_size="@dimen/battery_text_size" />
</LinearLayout>