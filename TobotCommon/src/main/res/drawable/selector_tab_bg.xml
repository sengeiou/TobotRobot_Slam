<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- 整个背景色-->
            <item>
                <shape>
                    <solid android:color="@color/theme_bg" />
                </shape>
            </item>
            <!-- 底部圆角,参数是固定的 -->
            <item android:width="@dimen/tab_indicator_width" android:height="@dimen/tab_indicator_height" android:gravity="bottom|center_horizontal">
                <shape>
                    <solid android:color="@color/option_bg_pressed" />
                    <corners android:radius="@dimen/tab_indicator_height" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@color/theme_bg" />
</selector>