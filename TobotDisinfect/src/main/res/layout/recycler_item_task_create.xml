<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_option_click_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/tv_item_padding_top"
        android:layout_marginBottom="@dimen/tv_item_padding_top"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_item"
            android:textSize="@dimen/tv_item" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_item_margin_top"
            android:textColor="@color/tv_item"
            android:textSize="@dimen/tv_item_tips" />
    </LinearLayout>
</RelativeLayout>