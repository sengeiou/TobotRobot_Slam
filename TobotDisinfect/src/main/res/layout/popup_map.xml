<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_popup_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_build_map"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_item_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/popup_margin_left_right"
        android:layout_marginRight="@dimen/popup_margin_left_right"
        android:drawableRight="@drawable/selector_switch"
        android:drawablePadding="@dimen/iv_drawable_padding"
        android:gravity="center"
        android:text="@string/tv_build_map"
        android:textColor="@color/option_tv_color"
        android:textSize="@dimen/option_tv_main_size" />

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_add_point"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:background="@drawable/selector_option_middle_click_bg"
        android:gravity="center"
        android:text="@string/tv_add_point"
        android:textColor="@color/option_tv_color"
        android:textSize="@dimen/option_tv_main_size" />

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_relocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:background="@drawable/selector_option_middle_click_bg"
        android:gravity="center"
        android:text="@string/tv_relocation"
        android:textColor="@color/option_tv_color"
        android:textSize="@dimen/option_tv_main_size" />

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_clean_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:background="@drawable/selector_option_middle_click_bg"
        android:gravity="center"
        android:text="@string/tv_clean_map"
        android:textColor="@color/option_tv_color"
        android:textSize="@dimen/option_tv_main_size" />

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_save_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:background="@drawable/selector_option_bottom_click_bg"
        android:gravity="center"
        android:text="@string/tv_save_map"
        android:textColor="@color/option_tv_color"
        android:textSize="@dimen/option_tv_main_size" />
</LinearLayout>