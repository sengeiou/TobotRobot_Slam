<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_load_size" android:height="@dimen/shape_btn_load_size" />
            <solid android:color="@color/shape_btn_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_load_size" android:height="@dimen/shape_btn_load_size" />
            <solid android:color="@color/shape_btn_pressed" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_load_size" android:height="@dimen/shape_btn_load_size" />
            <solid android:color="@color/shape_cancel_bg_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_load_size" android:height="@dimen/shape_btn_load_size" />
            <solid android:color="@color/shape_btn_normal" />
        </shape>
    </item>
</selector>