<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingTop="@dimen/view_margin_top"
        android:paddingBottom="@dimen/view_margin_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_view_margin"
            android:layout_marginRight="@dimen/main_view_margin"
            android:orientation="vertical">

            <!-- 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/option_view_height"
                android:background="@drawable/shape_option_bg"
                android:gravity="center_vertical">

                <TextView
                    style="@style/item_tv_text"
                    android:text="@string/tv_robot_num" />

                <TextView
                    android:id="@+id/tv_robot_num"
                    style="@style/item_right_text" />
            </RelativeLayout>

            <!-- 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/option_view_margin_interval"
                android:background="@drawable/shape_option_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_android_version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/option_view_height"
                    android:background="@drawable/selector_option_top_click_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/item_tv_text"
                        android:text="@string/tv_android_version" />

                    <TextView
                        android:id="@+id/tv_android_version"
                        style="@style/item_right_text" />
                </RelativeLayout>

                <View style="@style/option_view_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/option_view_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/item_tv_text"
                        android:text="@string/tv_serialize" />

                    <TextView
                        android:id="@+id/tv_serialize"
                        style="@style/item_right_text" />
                </RelativeLayout>

                <View style="@style/option_view_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/option_view_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/item_tv_text"
                        android:text="@string/tv_ip" />

                    <TextView
                        android:id="@+id/tv_ip"
                        style="@style/item_right_text" />
                </RelativeLayout>

                <View style="@style/option_view_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/option_view_height"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/item_tv_text"
                        android:text="@string/tv_mac" />

                    <TextView
                        android:id="@+id/tv_mac"
                        style="@style/item_right_text" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>